{
  "name": "warframe-name-generator",
  "version": "0.0.0-development",
  "description": "Name Generator for Warframe",
  "main": "index.js",
  "scripts": {
    "test": "nyc --reporter=text mocha",
    "coverage": "npm test && nyc report --reporter=text-lcov | coveralls",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "warframe",
    "name generator",
    "warframe name generator"
  ],
  "author": "TobiTenno",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=8.9.0",
    "npm": ">=6.1.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "coveralls": "^3.1.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "greenkeeper-lockfile": "^1.15.1",
    "mocha": "^6.2.3",
    "nyc": "^15.1.0",
    "sinon": "^7.5.0"
  },
  "mocha": {
    "exit": true,
    "check-leaks": true,
    "diff": true,
    "extension": ["js"],
    "color": true
  },
  "eslintIgnore": [],
  "eslintConfig": {
    "extends": "airbnb-base",
    "parserOptions": {
      "sourceType": "script"
    },
    "rules": {
      "valid-jsdoc": [
        "error",
        {
          "requireReturn": false,
          "requireReturnDescription": false,
          "preferType": {
            "String": "string",
            "Number": "number",
            "Boolean": "boolean",
            "Function": "function",
            "object": "Object",
            "date": "Date",
            "error": "Error"
          },
          "prefer": {
            "return": "returns"
          }
        }
      ],
      "strict": [
        "error",
        "safe"
      ],
      "linebreak-style": "off",
      "no-restricted-syntax": [
        "off"
      ],
      "no-await-in-loop": "off",
      "import/no-unresolved": 0,
      "global-require": "off"
    }
  }
}
